<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0a0b29">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container_judul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/judul"
            android:textSize="42dp"
            android:textColor="@color/white"
            android:fontFamily="@font/permanentmarker_regular"
            android:text="Order"/>

        <TextView
            android:id="@+id/samping_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:textColor="#ffea00"
            android:fontFamily="@font/permanentmarker_regular"
            android:text="Right"/>
    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/gambar_pertama"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/container_judul"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pesawat_removebg"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/tombol_pertama"
        android:layout_below="@+id/gambar_pertama"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Start"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular2"
        android:textStyle="bold"
        android:background="@drawable/custom_button"/>

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="80dp"-->
<!--        android:layout_marginTop="650dp"-->
<!--        android:background="@drawable/custom_selector"/>-->


</RelativeLayout>